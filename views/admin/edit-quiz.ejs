<%- include('../partials/header') %>
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-slate-950 text-slate-100 py-12 px-4">
    <div class="max-w-4xl mx-auto">
        
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-12">
            <div>
                <div class="inline-block px-3 py-1 bg-indigo-500/10 border border-indigo-500/20 rounded-full text-indigo-400 text-xs font-bold uppercase tracking-widest mb-4">
                    Admin Command Center
                </div>
                <h1 class="text-4xl font-extrabold text-white tracking-tight">Edit Mission Parameters</h1>
                <p class="text-slate-400 mt-2">Intelligence ID: <span class="text-indigo-400 font-mono"><%= quiz.id %></span></p>
            </div>
            <div class="flex gap-3">
                <button type="button" onclick="addQuestion()" class="bg-emerald-600 hover:bg-emerald-500 text-white px-4 py-2 rounded-xl text-sm font-bold transition-all flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Question
                </button>
                <a href="/admin/manage-courses" class="bg-slate-800 hover:bg-slate-700 text-white px-4 py-2 rounded-xl text-sm font-bold transition-all flex items-center gap-2">
                    âœ• Cancel
                </a>
            </div>
        </div>

        <form action="/admin/quiz/edit/<%= quiz.id %>" method="POST" class="space-y-8" id="quiz-form">
            
            <div class="bg-slate-900/50 border border-slate-800 rounded-2xl p-8 shadow-2xl backdrop-blur-sm">
                <label class="block text-sm font-bold text-slate-400 uppercase tracking-wider mb-3">Mission Designation (Title)</label>
                <input type="text" name="quiz_title" value="<%= quiz.quiz_title %>" required
                       class="w-full bg-slate-950 border border-slate-700 rounded-xl p-4 text-xl text-white focus:ring-2 focus:ring-indigo-500 transition-all outline-none">
            </div>

            <div id="questions-container" class="space-y-6">
                <% questions.forEach((q, qIndex) => { %>
                    <div class="question-card bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-xl" data-index="<%= qIndex %>">
                        <div class="bg-slate-800/50 px-6 py-3 border-b border-slate-800 flex items-center justify-between">
                            <span class="text-sm font-bold text-indigo-400 uppercase tracking-tighter">Question Slot</span>
                            <button type="button" onclick="removeQuestion(this)" class="text-slate-500 hover:text-red-400 transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </div>

                        <div class="p-8 space-y-6">
                            <div>
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Inquiry Prompt</label>
                                <textarea name="questions[<%= qIndex %>][question_text]" required rows="2"
                                          class="w-full bg-slate-950 border border-slate-700 rounded-xl p-4 text-white focus:ring-1 focus:ring-indigo-500 outline-none"><%= q.question_text %></textarea>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <% q.options.forEach((opt, oIndex) => { %>
                                    <div class="flex items-center gap-3 bg-slate-950 border border-slate-800 p-3 rounded-xl">
                                        <input type="radio" name="questions[<%= qIndex %>][correct_index]" value="<%= oIndex %>" 
                                               <%= q.correct_index == oIndex ? 'checked' : '' %>
                                               class="w-5 h-5 text-indigo-600 bg-slate-900 border-slate-700 focus:ring-indigo-500" required>
                                        <input type="text" name="questions[<%= qIndex %>][options][]" value="<%= opt %>" 
                                               placeholder="Option <%= oIndex + 1 %>"
                                               class="w-full bg-transparent border-none p-2 text-slate-300 focus:text-white outline-none">
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="pt-8 flex flex-col gap-4">
                <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-5 rounded-2xl shadow-lg shadow-indigo-500/20 transition-all active:scale-[0.98] flex items-center justify-center gap-3">
                    Synchronize Mission Data
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Function to add a new question card
    function addQuestion() {
        const container = document.getElementById('questions-container');
        const qIndex = container.children.length; // Use current count for index
        
        const questionHtml = `
            <div class="question-card bg-slate-900 border border-indigo-500/30 rounded-2xl overflow-hidden shadow-xl animate-in fade-in slide-in-from-bottom-4 duration-300">
                <div class="bg-indigo-500/10 px-6 py-3 border-b border-indigo-500/20 flex items-center justify-between">
                    <span class="text-sm font-bold text-indigo-400 uppercase tracking-tighter">New Question Slot</span>
                    <button type="button" onclick="removeQuestion(this)" class="text-slate-500 hover:text-red-400 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>
                <div class="p-8 space-y-6">
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Inquiry Prompt</label>
                        <textarea name="questions[\${qIndex}][question_text]" required rows="2" placeholder="Enter question here..."
                                  class="w-full bg-slate-950 border border-slate-700 rounded-xl p-4 text-white focus:ring-1 focus:ring-indigo-500 outline-none"></textarea>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        \${[0,1,2,3].map(i => \`
                            <div class="flex items-center gap-3 bg-slate-950 border border-slate-800 p-3 rounded-xl">
                                <input type="radio" name="questions[\${qIndex}][correct_index]" value="\${i}" required
                                       class="w-5 h-5 text-indigo-600 bg-slate-900 border-slate-700">
                                <input type="text" name="questions[\${qIndex}][options][]" required placeholder="Option \${i+1}"
                                       class="w-full bg-transparent border-none p-2 text-slate-300 focus:text-white outline-none">
                            </div>
                        \`).join('')}
                    </div>
                </div>
            </div>
        \`;
        
        container.insertAdjacentHTML('beforeend', questionHtml);
        reIndexQuestions(); // Ensure naming remains consistent
    }

    function removeQuestion(btn) {
        if(confirm('Permanently remove this question from mission parameters?')) {
            btn.closest('.question-card').remove();
            reIndexQuestions();
        }
    }

    // CRITICAL: Renames all input names after a delete so the array is continuous [0, 1, 2...]
    function reIndexQuestions() {
        const cards = document.querySelectorAll('.question-card');
        cards.forEach((card, index) => {
            // Update Question Text Name
            const textarea = card.querySelector('textarea');
            if(textarea) textarea.name = \`questions[\${index}][question_text]\`;

            // Update Radio Button Names
            const radios = card.querySelectorAll('input[type="radio"]');
            radios.forEach(r => r.name = \`questions[\${index}][correct_index]\`);

            // Update Option Text Names
            const optionInputs = card.querySelectorAll('input[type="text"]');
            optionInputs.forEach(opt => opt.name = \`questions[\${index}][options][]\`);
        });
    }
</script>

<%- include('../partials/footer') %>