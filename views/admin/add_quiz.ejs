<%- include('../partials/header') %>
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-slate-50 pb-20">
    <div class="bg-white border-b border-slate-200 py-6 mb-8">
        <div class="container mx-auto px-4 max-w-5xl">
            <h1 class="text-2xl font-bold text-slate-800">
                Quiz Creator: <span class="text-indigo-600"><%= module.module_title %></span>
            </h1>
        </div>
    </div>

    <div class="container mx-auto px-4 max-w-5xl">
        <form action="/admin/modules/<%= module.id %>/add-quiz" method="POST">
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-8">
                <label class="block text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">General Info</label>
                <input type="text" name="quiz_title" 
                    class="w-full text-lg px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-indigo-500 outline-none transition-all"
                    placeholder="Enter Quiz Title (e.g. Final Assessment)" required>
            </div>

            <div id="questions-container" class="space-y-8">
                <div class="question-card bg-white rounded-xl shadow-md border border-slate-200 overflow-hidden" data-q-index="0">
                    <div class="bg-slate-800 px-6 py-3 flex justify-between items-center">
                        <span class="text-white font-bold">Question 1</span>
                        <button type="button" onclick="removeQuestion(this)" class="text-slate-400 hover:text-red-400 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </button>
                    </div>

                    <div class="p-6">
                        <textarea name="questions[0][text]" 
                            class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-indigo-500 outline-none mb-6" 
                            placeholder="Type your question here..." rows="2" required></textarea>

                        <div class="space-y-3 options-list" id="options-0">
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Answer Options</label>
                            
                            <div class="flex items-center gap-3 option-row">
                                <input type="radio" name="questions[0][correct]" value="0" checked class="w-5 h-5 text-indigo-600 focus:ring-indigo-500">
                                <input type="text" name="questions[0][options][]" placeholder="Option 1" 
                                    class="flex-1 px-4 py-2 border border-slate-200 rounded-lg focus:border-indigo-400 outline-none" required>
                                <button type="button" onclick="removeOption(this)" class="text-slate-300 hover:text-red-500">&times;</button>
                            </div>
                            
                            <div class="flex items-center gap-3 option-row">
                                <input type="radio" name="questions[0][correct]" value="1" class="w-5 h-5 text-indigo-600 focus:ring-indigo-500">
                                <input type="text" name="questions[0][options][]" placeholder="Option 2" 
                                    class="flex-1 px-4 py-2 border border-slate-200 rounded-lg focus:border-indigo-400 outline-none" required>
                                <button type="button" onclick="removeOption(this)" class="text-slate-300 hover:text-red-500">&times;</button>
                            </div>
                        </div>

                        <button type="button" onclick="addOption(0)" 
                            class="mt-4 text-sm font-semibold text-indigo-600 hover:text-indigo-800 flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                            </svg>
                            Add Option
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-10 flex flex-col md:flex-row gap-4 justify-between items-center">
                <button type="button" onclick="addQuestion()" 
                    class="w-full md:w-auto px-6 py-3 bg-white border-2 border-indigo-100 rounded-xl text-indigo-600 font-bold hover:bg-indigo-50 transition-all">
                    + Add New Question
                </button>

                <button type="submit" 
                    class="w-full md:w-auto px-12 py-4 bg-indigo-600 text-white rounded-xl font-bold shadow-lg shadow-indigo-200 hover:bg-indigo-700 hover:-translate-y-1 transition-all">
                    Deploy Quiz
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    let qCount = 1;

    function addOption(qIdx) {
        const container = document.getElementById(`options-${qIdx}`);
        const optionCount = container.querySelectorAll('.option-row').length;
        
        const html = `
            <div class="flex items-center gap-3 option-row animate-in fade-in slide-in-from-left-2 duration-200">
                <input type="radio" name="questions[${qIdx}][correct]" value="${optionCount}" class="w-5 h-5 text-indigo-600">
                <input type="text" name="questions[${qIdx}][options][]" placeholder="New Option" 
                    class="flex-1 px-4 py-2 border border-slate-200 rounded-lg focus:border-indigo-400 outline-none" required>
                <button type="button" onclick="removeOption(this)" class="text-slate-300 hover:text-red-500">&times;</button>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
    }

    function removeOption(btn) {
        const row = btn.closest('.option-row');
        const container = row.parentElement;
        if (container.querySelectorAll('.option-row').length > 1) {
            row.remove();
            // Re-index radio values
            container.querySelectorAll('input[type="radio"]').forEach((radio, idx) => {
                radio.value = idx;
            });
        }
    }

    function addQuestion() {
        const container = document.getElementById('questions-container');
        const html = `
            <div class="question-card bg-white rounded-xl shadow-md border border-slate-200 overflow-hidden mt-8" data-q-index="${qCount}">
                <div class="bg-slate-800 px-6 py-3 flex justify-between items-center">
                    <span class="text-white font-bold">Question ${qCount + 1}</span>
                    <button type="button" onclick="removeQuestion(this)" class="text-slate-400 hover:text-red-400 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                    </button>
                </div>
                <div class="p-6">
                    <textarea name="questions[${qCount}][text]" class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-indigo-500 outline-none mb-6" placeholder="Type your question here..." rows="2" required></textarea>
                    <div class="space-y-3 options-list" id="options-${qCount}">
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Answer Options</label>
                        <div class="flex items-center gap-3 option-row">
                            <input type="radio" name="questions[${qCount}][correct]" value="0" checked class="w-5 h-5 text-indigo-600">
                            <input type="text" name="questions[${qCount}][options][]" placeholder="Option 1" class="flex-1 px-4 py-2 border border-slate-200 rounded-lg focus:border-indigo-400 outline-none" required>
                        </div>
                    </div>
                    <button type="button" onclick="addOption(${qCount})" class="mt-4 text-sm font-semibold text-indigo-600 hover:text-indigo-800 flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                        Add Option
                    </button>
                </div>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
        qCount++;
    }

    function removeQuestion(btn) {
        btn.closest('.question-card').remove();
    }
</script>