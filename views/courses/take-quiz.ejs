<%- include('../partials/header') %>
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-slate-950 text-slate-100 py-12 px-4">
    <div class="max-w-3xl mx-auto">
        
        <div class="text-center mb-12">
            <div class="inline-block px-3 py-1 bg-indigo-500/10 border border-indigo-500/20 rounded-full text-indigo-400 text-xs font-bold uppercase tracking-widest mb-4">
                Active Assessment
            </div>
            <h1 class="text-4xl font-extrabold text-white mb-2"><%= quiz.quiz_title %></h1>
            <p class="text-slate-400">Read each data point carefully before selecting your conclusion.</p>
        </div>

        <form action="/courses/quiz/<%= quiz.id %>/submit" method="POST" class="space-y-6">
            <% questions.forEach((q, qIndex) => { %>
                <div class="bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="bg-slate-800/50 px-6 py-3 border-b border-slate-800 flex items-center justify-between">
                        <span class="text-sm font-bold text-slate-400 uppercase tracking-tighter">Transmission <%= qIndex + 1 %></span>
                        <span class="h-2 w-2 rounded-full bg-indigo-500 animate-pulse"></span>
                    </div>

                    <div class="p-8">
                        <h3 class="text-xl text-white font-medium leading-relaxed mb-8">
                            <%= q.question_text %>
                        </h3>

                        <div class="grid grid-cols-1 gap-4">
                            <% q.options.forEach((opt, optIndex) => { %>
                                <label class="relative flex items-center p-4 bg-slate-800 border border-slate-700 rounded-xl cursor-pointer hover:bg-slate-700 hover:border-indigo-500/50 transition-all group">
                                    <input type="radio" 
                                           name="answers[<%= q.id %>]" 
                                           value="<%= optIndex %>" 
                                           class="w-5 h-5 text-indigo-600 bg-slate-900 border-slate-600 focus:ring-indigo-500 focus:ring-offset-slate-900" 
                                           required>
                                    <span class="ml-4 text-slate-300 group-hover:text-white transition-colors">
                                        <%= opt %>
                                    </span>
                                </label>
                            <% }) %>
                        </div>
                    </div>
                </div>
            <% }) %>

            <div class="pt-8">
                <button type="submit" 
                    class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-5 rounded-2xl shadow-lg shadow-indigo-500/20 transition-all active:scale-[0.98] flex items-center justify-center gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Submit Mission Data
                </button>
                <p class="text-center text-slate-500 text-xs mt-4">Note: Results will be logged to your permanent record.</p>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>