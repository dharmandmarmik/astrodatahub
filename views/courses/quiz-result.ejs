<%- include('../partials/header') %>
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-slate-950 text-white py-12 px-4">
    <div class="max-w-3xl mx-auto">
        
        <div class="bg-slate-900 border border-slate-800 rounded-3xl shadow-2xl p-8 md:p-12 text-center relative overflow-hidden mb-8">
            <div class="absolute -top-24 -right-24 w-64 h-64 bg-indigo-600/10 rounded-full blur-3xl"></div>

            <div class="mb-8 flex justify-center">
                <% if (percentage >= 70) { %>
                    <div class="w-24 h-24 bg-green-500/20 text-green-500 rounded-full flex items-center justify-center border border-green-500/30 ring-8 ring-green-500/5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                <% } else { %>
                    <div class="w-24 h-24 bg-amber-500/20 text-amber-500 rounded-full flex items-center justify-center border border-amber-500/30 ring-8 ring-amber-500/5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                <% } %>
            </div>

            <h2 class="text-xs font-bold text-slate-400 uppercase tracking-[0.4em] mb-2">Analysis Complete</h2>
            <h1 class="text-5xl font-black mb-6 tracking-tight">
                Score: <span class="<%= (percentage || 0) >= 70 ? 'text-green-400' : 'text-amber-400' %>"><%= percentage || 0 %>%</span>
            </h1>
            
            <div class="max-w-md mx-auto bg-slate-800/50 rounded-2xl p-6 mb-8 border border-slate-800/50">
                <div class="flex justify-between items-center mb-3">
                    <span class="text-slate-400 font-medium">Correct Conclusions</span>
                    <span class="font-bold text-white text-lg"><%= score || 0 %> / <%= total || 0 %></span>
                </div>
                <div class="w-full bg-slate-700 h-3 rounded-full overflow-hidden">
                    <div class="<%= (percentage || 0) >= 70 ? 'bg-green-500 shadow-[0_0_15px_rgba(34,197,94,0.4)]' : 'bg-amber-500 shadow-[0_0_15px_rgba(245,158,11,0.4)]' %> h-full transition-all duration-1000 ease-out" style="width: <%= percentage || 0 %>%"></div>
                </div>
            </div>

            <p class="text-slate-300 mb-10 leading-relaxed max-w-lg mx-auto">
                <% if ((percentage || 0) >= 70) { %>
                    Excellent work, explorer. You have demonstrated a clear understanding of the <strong><%= quiz.quiz_title %></strong> data set. Your progress has been logged.
                <% } else { %>
                    The mission data was not fully processed. It is recommended that you review the module materials and attempt the calibration again to achieve mastery.
                <% } %>
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/courses" class="px-8 py-4 bg-white text-slate-950 font-bold rounded-xl hover:bg-slate-200 transition-all flex items-center justify-center gap-2">
                    Return to Catalog
                </a>
                <% if ((percentage || 0) < 100) { %>
                    <a href="/courses/quiz/<%= quiz.id %>" class="px-8 py-4 bg-slate-800 text-white font-bold rounded-xl hover:bg-slate-700 transition-all border border-slate-700 flex items-center justify-center gap-2">
                        Re-Attempt Assessment
                    </a>
                <% } %>
            </div>
        </div>

        <div class="bg-slate-900 border border-slate-800 rounded-3xl p-8 md:p-10 shadow-xl">
            <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Detailed Mission Debrief
            </h3>

            <div class="space-y-6">
                <% (review || []).forEach((item, index) => { %>
                    <div class="p-6 rounded-2xl border transition-all <%= item.isCorrect ? 'border-green-500/10 bg-green-500/5' : 'border-red-500/10 bg-red-500/5' %>">
                        <div class="flex items-start gap-4">
                            <div class="mt-1 flex-shrink-0">
                                <% if (item.isCorrect) { %>
                                    <span class="flex h-6 w-6 items-center justify-center rounded-full bg-green-500/20 text-green-500">
                                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                    </span>
                                <% } else { %>
                                    <span class="flex h-6 w-6 items-center justify-center rounded-full bg-red-500/20 text-red-500">
                                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
                                    </span>
                                <% } %>
                            </div>
                            
                            <div class="flex-1">
                                <p class="text-white font-semibold text-lg mb-3">
                                    <span class="text-slate-500 mr-2 text-sm">#<%= index + 1 %></span> 
                                    <%= item.question %>
                                </p>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-4">
                                    <div class="px-4 py-3 rounded-xl bg-slate-950/50 border <%= item.isCorrect ? 'border-green-500/30' : 'border-red-500/30' %>">
                                        <span class="block text-[10px] uppercase font-bold text-slate-500 mb-1 tracking-wider">Your Response</span>
                                        <span class="<%= item.isCorrect ? 'text-green-400' : 'text-red-400' %> font-medium"><%= item.userChoice %></span>
                                    </div>

                                    <% if (!item.isCorrect) { %>
                                        <div class="px-4 py-3 rounded-xl bg-slate-950/50 border border-green-500/30">
                                            <span class="block text-[10px] uppercase font-bold text-slate-500 mb-1 tracking-wider">Correct Protocol</span>
                                            <span class="text-green-400 font-medium"><%= item.correctAnswer %></span>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>