<%- include('../partials/header') %>
<script src="https://cdn.tailwindcss.com"></script>

<style>
    .watermark {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-25deg);
        font-size: 7rem;
        font-weight: 900;
        opacity: 0.02;
        pointer-events: none;
        white-space: nowrap;
        text-transform: uppercase;
    }
    .status-stamp {
        transform: rotate(-10deg);
        border: 4px double;
        font-family: 'Courier New', Courier, monospace;
    }
    .font-atomic {
        font-family: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;
    }
    @media print {
        .no-print { display: none; }
        .print-only { display: block; }
        body { background: white !important; color: black !important; }
    }
</style>

<div class="min-h-screen bg-[#0a0f1d] text-slate-300 py-12 px-4 print:bg-white print:py-0">
    <div class="max-w-4xl mx-auto">
        
        <div class="bg-white text-slate-900 shadow-2xl rounded-sm relative overflow-hidden border-[12px] border-slate-100 outline outline-1 outline-slate-300 print:shadow-none print:border-slate-200">
            <div class="watermark">OFFICIAL TRANSCRIPT</div>
            
            <div class="p-8 md:p-12 border-b-2 border-slate-900">
                <div class="flex flex-col md:flex-row justify-between items-center gap-6">
                    <div class="text-center md:text-left">
                        <h3 class="text-blue-600 font-black tracking-[0.3em] text-[10px] mb-1">ASTRODATA GLOBAL ACADEMY</h3>
                        <h1 class="text-4xl font-serif font-bold italic text-slate-900">Examination Report</h1>
                        <p class="text-slate-400 text-[10px] mt-2 font-mono uppercase">Reference: ADH-<%= quiz.id %>-<%= user.id %></p>
                    </div>

                    <div class="bg-slate-50 border-2 border-slate-900 p-4 text-center min-w-[140px]">
                        <span class="block text-[9px] font-black text-slate-500 uppercase tracking-widest mb-1">Global Rank</span>
                        <span class="text-4xl font-black italic">#<%= rank %></span>
                        <span class="block text-[10px] font-bold text-slate-400 mt-1">of <%= totalExaminees %> Candidates</span>
                    </div>
                </div>
            </div>

            <div class="p-8 md:p-12">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12 text-sm">
                    <div>
                        <label class="block text-[9px] font-black text-slate-400 uppercase mb-1">Candidate</label>
                        <p class="font-bold border-b border-slate-200 pb-1"><%= user.username %></p>
                    </div>
                    <div>
                        <label class="block text-[9px] font-black text-slate-400 uppercase mb-1">Subject Module</label>
                        <p class="font-bold border-b border-slate-200 pb-1"><%= quiz.quiz_title %></p>
                    </div>
                    <div>
                        <label class="block text-[9px] font-black text-slate-400 uppercase mb-1">Atomic Duration</label>
                        <p class="font-bold border-b border-slate-200 pb-1 text-blue-700 font-atomic">
                            <%= parseFloat(timeTaken).toFixed(4) %>s
                        </p>
                    </div>
                    <div>
                        <label class="block text-[9px] font-black text-slate-400 uppercase mb-1">Achievement</label>
                        <p class="font-bold border-b border-slate-200 pb-1 <%= percentage >= 70 ? 'text-emerald-600' : 'text-amber-600' %>">
                            <%= percentage %>%
                        </p>
                    </div>
                </div>

                <div class="flex flex-col md:flex-row items-center gap-10 mb-12 py-8 bg-slate-50/50 rounded-xl px-6 border border-slate-100">
                    <div class="relative w-32 h-32 flex items-center justify-center">
                        <svg class="w-full h-full transform -rotate-90">
                            <circle cx="64" cy="64" r="58" stroke="currentColor" stroke-width="8" fill="transparent" class="text-slate-200" />
                            <circle cx="64" cy="64" r="58" stroke="currentColor" stroke-width="8" fill="transparent" 
                                stroke-dasharray="364.4" 
                                stroke-dashoffset="<%= 364.4 - (364.4 * percentage / 100) %>" 
                                class="<%= percentage >= 70 ? 'text-emerald-500' : 'text-amber-500' %> transition-all duration-1000" />
                        </svg>
                        <span class="absolute text-2xl font-black"><%= percentage %>%</span>
                    </div>
                    <div class="flex-1 space-y-3 w-full">
                        <div class="flex justify-between text-sm italic text-slate-600 border-b border-white pb-1">
                            <span>Raw Score:</span>
                            <span class="font-bold text-slate-900"><%= score %> / <%= total %> Questions</span>
                        </div>
                        <div class="flex justify-between text-sm italic text-slate-600 border-b border-white pb-1">
                            <span>High-Res Time:</span>
                            <span class="font-bold text-slate-900 font-atomic tracking-tighter">
                                <%= parseFloat(timeTaken).toFixed(4) %> Seconds
                            </span>
                        </div>
                        <div class="flex justify-between text-sm italic text-slate-600">
                            <span>Classification:</span>
                            <span class="font-black uppercase tracking-tighter <%= percentage >= 70 ? 'text-emerald-600' : 'text-amber-600' %>">
                                <%= percentage >= 70 ? 'DISTINCTION' : 'MERIT (PASS)' %>
                            </span>
                        </div>
                    </div>
                    <div class="status-stamp px-4 py-1 text-xl font-black uppercase <%= percentage >= 70 ? 'text-emerald-600 border-emerald-600' : 'text-amber-600 border-amber-600' %>">
                        <%= percentage >= 70 ? 'Verified' : 'Recorded' %>
                    </div>
                </div>

                <div class="mb-10">
                    <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4">Itemized Neural Analysis</h4>
                    <div class="space-y-4">
                        <% (review || []).forEach((item, index) => { %>
                            <div class="border border-slate-200 rounded-lg overflow-hidden shadow-sm">
                                <div class="bg-slate-900 text-white px-4 py-2 flex justify-between items-center">
                                    <span class="font-mono text-[10px]">TRANSMISSION_REF: 0<%= index + 1 %></span>
                                    <span class="font-black text-[10px] uppercase <%= item.isCorrect ? 'text-emerald-400' : 'text-red-400' %>">
                                        <%= item.isCorrect ? '[VALIDATED]' : '[CORRUPTED]' %>
                                    </span>
                                </div>
                                <div class="p-4 bg-white">
                                    <p class="text-sm font-bold text-slate-800 mb-3"><%= item.question %></p>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div class="p-2 bg-slate-50 rounded border border-dashed border-slate-200">
                                            <label class="block text-[8px] font-black text-slate-400 uppercase">Inbound Data (Your Answer)</label>
                                            <span class="text-xs font-mono <%= item.isCorrect ? 'text-emerald-600' : 'text-red-600 font-bold' %>">
                                                <%= item.userChoice %>
                                            </span>
                                        </div>
                                        <div class="p-2 bg-slate-50 rounded border border-dashed border-slate-200">
                                            <label class="block text-[8px] font-black text-slate-400 uppercase">Expected Pattern (Correct)</label>
                                            <span class="text-xs font-mono text-blue-600"><%= item.correctAnswer %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <div class="flex flex-col md:flex-row justify-between items-end gap-6 border-t-2 border-slate-900 pt-8 no-print">
                    <div class="text-[9px] text-slate-400 italic leading-relaxed">
                        * High-resolution time audit: <%= parseFloat(timeTaken).toFixed(4) %>s accuracy.<br>
                        * Ranking tie-breaker: Lowest transmission time.<br>
                        * Certified on: <%= new Date().toLocaleDateString('en-GB', { day: '2-digit', month: 'long', year: 'numeric' }) %>
                    </div>
                    <div class="flex gap-3">
                        <a href="/courses/course/<%= courseId %>" class="px-8 py-3 bg-slate-900 text-white font-black text-[10px] uppercase tracking-widest hover:bg-blue-700 transition-all">
                            Continue Mission
                        </a>
                        <button onclick="window.print()" class="px-6 py-3 border-2 border-slate-900 text-slate-900 font-black text-[10px] uppercase tracking-widest hover:bg-slate-50 transition-all">
                            Print Transcript
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-8 flex justify-center opacity-30">
            <div class="text-center">
                <p class="font-serif italic text-slate-400 text-sm">AstroData Hub Systems</p>
                <div class="w-32 h-px bg-slate-700 mx-auto mt-1 mb-1"></div>
                <p class="text-[8px] font-black uppercase tracking-widest">Digital Audit Logged</p>
            </div>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>